<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="350.0" prefWidth="350.0" spacing="20.0" style="-fx-background-color: #89b82f; -fx-background-radius: 15;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.rockpaperscissors.Controller">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>
        <Pane prefHeight="447.0" prefWidth="360.0" style="-fx-background-color: #90EE90; -fx-background-radius: 15; -fx-border-color: Black; -fx-border-width: 2; -fx-border-radius: 15;">
            <children>
                <Label fx:id="player" alignment="CENTER" layoutX="45.0" layoutY="19.0" prefHeight="32.0" prefWidth="247.0" text="Rock Paper Scissors Game" textFill="RED">
                    <font>
                        <Font name="Comic Sans MS" size="20.0" />
                    </font>
                </Label>
                <ImageView fitHeight="90.0" fitWidth="60.0" layoutX="59.0" layoutY="59.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@photo/rock.png" />
                    </image>
                </ImageView>
                <ImageView fitHeight="90.0" fitWidth="60.0" layoutX="135.0" layoutY="59.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@photo/paper.png" />
                    </image>
                </ImageView>
                <Button layoutX="101.0" layoutY="177.0" mnemonicParsing="false" onAction="#onPlayButtonClick" prefHeight="32.0" prefWidth="130.0" style="-fx-background-color: #F4A460; -fx-background-radius: 30;" text="Play" textFill="WHITE">
                    <font>
                        <Font name="Comic Sans MS" size="20.0" />
                    </font>
                </Button>
                <Button layoutX="101.0" layoutY="231.0" mnemonicParsing="false" onAction="#onExitButtonClick" prefHeight="32.0" prefWidth="130.0" style="-fx-background-color: #87CEEB; -fx-background-radius: 30;" text="Exit" textFill="RED">
                    <font>
                        <Font name="Comic Sans MS" size="20.0" />
                    </font>
                </Button>
                <Label alignment="CENTER" layoutX="102.0" layoutY="284.0" prefHeight="32.0" prefWidth="82.0" text="Made by: " textFill="BLUE">
                    <font>
                        <Font name="Comic Sans MS" size="18.0" />
                    </font>
                </Label>
            <ImageView fitHeight="90.0" fitWidth="60.0" layoutX="211.0" layoutY="59.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@photo/scissors.png" />
               </image>
            </ImageView>
            <TextField fx:id="textFieldName" layoutX="136.0" layoutY="134.0" prefHeight="30.0" prefWidth="170.0" promptText="Your name here" style="-fx-background-radius: 20;" />
            <Label alignment="CENTER" layoutX="24.0" layoutY="131.0" prefHeight="32.0" prefWidth="113.0" text="Player name:">
               <font>
                  <Font name="Comic Sans MS" size="18.0" />
               </font>
            </Label>
            <Hyperlink layoutX="178.0" layoutY="283.0" onAction="#onLinkProfileClick" text="Acus" textFill="BLUE" underline="true">
               <font>
                  <Font name="Comic Sans MS" size="18.0" />
               </font>
            </Hyperlink>
            </children>
        </Pane>
    </children>
</VBox>
